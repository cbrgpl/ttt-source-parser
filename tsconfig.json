{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "lib": [ "ESNext" ],
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@core_types": [ "./src/types/core_types.ts" ],
      "@types": [ "./src/types/index.ts" ],
      "@errors/*": [ "./src/errors/*" ],
      "@helpers/*": [ "./src/helpers/*" ],
      "@/*": [ "./src/*" ]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
  },
  "include": [ 
  "src/**/*.ts", 
  "src/**/*.d.ts", 
  "src/**/*.js",
  "dec/**/*.ts"
  ]
}
